{
  "version": 2,
  "buildCommand": "npm install && npx vite build --config vite.config.ts",
  "outputDirectory": "dist/public",
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "^/assets/.*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(?!assets/).*$",
      "dest": "/index.html"
    }
  ]
}
